body {
  font-family: 'Poppins', sans-serif;
}

.navbar-brand span {
  color: #FF3C3C;
  font-weight: bold;
}

.footer {
  background-color: #f8f9fa;
  padding: 40px 0;
}

.footer-logo {
  font-weight: bold;
  color: #FF3C3C;
}

.footer a {
  text-decoration: none;
  color: #000;
}

.footer .social-icons i {
  font-size: 20px;
  margin-right: 15px;
  color: #000;
}

.footer-bottom {
  font-size: 14px;
  text-align: center;
  margin-top: 20px;
  color: #666;
}
